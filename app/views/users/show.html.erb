<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%# <%= gravatar_for @user %>
        <%= @user.name %> (<%= @user.email %>)
      </h1>
      <% if @questions.count > 0 %> 
        <div>
          <h2 style="float: left; margin-bottom: 0px">Questions</h2>
          <br><br>
          <u1 class="questions">
            <% @pullAnswers = false %>
            <%= render @questions %>
          </u1>
        </div>
      <% end %>
      <% if @answers.count > 0 %> 
        <div>
          <h2 style="float: left; margin-bottom: 0px">Answers</h2>
          <br><br>
          <u1 class="questions">
            <% @pullAnswers = false %>
            <%= render @answers %>
          </u1>
        </div>
      <% end %>
    </section>
  </aside>
</div>
